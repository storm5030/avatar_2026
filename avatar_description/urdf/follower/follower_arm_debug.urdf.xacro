<?xml version="1.0"?>
<robot name="follower_arm_debug" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="prefix" default="" />

  <xacro:include filename="./follower_arm.urdf.xacro" />

  <link name="world"/>
  <joint name="$(arg prefix)world_fixed" type="fixed">
    <parent link="world"/>
    <child link="$(arg prefix)link0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <xacro:follower prefix="$(arg prefix)" />

</robot>